set exrc
set undodir=~/.vim/undodir
set undofile
set nobackup
set incsearch
set scrolloff=8
set signcolumn=yes
set colorcolumn=160
set hidden
set number
set relativenumber
set tabstop=4 softtabstop=4
set shiftwidth=4
set expandtab
set smartindent
set mouse=a

call plug#begin('~/local/share/nvim/plugged')

set encoding=UTF-8

call plug#end()
